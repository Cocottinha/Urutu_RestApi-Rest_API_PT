<%- include ('../partials/header.ejs') %>
<%- include ('../partials/homenavbar.ejs') %>
<body>
    <div class="container">
        <br><hr>
        <div class="col col-12" style="padding-left: 30%;">
            <h2> Consulta de Projetos</h2>
        </div>

        <hr>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID_projeto          </th>
                    <th>Nome do projeto     </th>
                    <th>Diretório da imagem </th>
                    <th>Largura da imagem   </th>          
                    <th>Altura da imagem    </th>          
                    <th> Excluir Projeto</th>
                </tr>
            </thead>
            <tbody>
                <% projeto.forEach(pj => { %>
                <tr>
                    <th><%= pj.id_projeto         %></th>    
                    <th><%= pj.nome_imagem        %></th>  
                    <th><%= pj.diretorio_imagem   %></th>  
                    <th><%= pj.largura_imagem     %></th>  
                    <th><%= pj.altura_imagem      %></th>  
                    <th>
                        <form method="POST" action="/projeto/delete" style="display: inline;" onsubmit="confirmarDelecao(event, this)">
                            <input type="hidden" name="id" value="<%= pj.id_projeto %>">
                            <button class="btn btn-danger">Deletar</button>
                        </form>
                    </th>
                </tr>
                <% })%>
            </tbody>
        </table>
        <br><hr>
    </div>

   
</body>



<%- include ('../partials/footer.ejs') %>

<script>    
function confirmarDelecao(event, form){
    event.preventDefault();
    var decision = confirm("Você quer deletar todos os projetos?");

    if(decision)
        form.submit();

}

</script>