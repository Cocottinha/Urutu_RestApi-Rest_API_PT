<%- include ('../partials/header.ejs') %>
<%- include ('../partials/homenavbar.ejs') %>

<div class="container">
    <br><hr>
    
    <div class="col col-12" style="padding-left: 30%;">
        <h2> Consulta de Pontos FTIR </h2>
    </div>

    <hr>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID_Técnica_FTIR     </th>
                <th>Tempo               </th>
                <th>Intervalo            </th>
                <th>Resolução           </th>
                <th>Data                </th>
                <th>Comentário          </th>
                <th>Resultado           </th>
                <th>Tonalidade          </th>
                <th>Nome da técnica     </th>
                <th>ID_Técnica          </th>
        </tr>
        </thead>
        <tbody>
            <% tecnicaFtir.forEach(tcFir => { %>
            <tr>
                <th><%= tcFir.id_tecnica_FTIR          %></th>    
                <th><%= tcFir.tempo                    %></th>    
                <th><%= tcFir.intervalo                %></th>    
                <th><%= tcFir.resolucao                %></th>    
                <th><%= tcFir.data                     %></th>    
                <th><%= tcFir.comentario               %></th> 
                <th><%= tcFir.resultado                %></th> 
                <th><%= tcFir.tonalidade               %></th> 
                <th><%= tcFir.nome_tecnica             %></th> 
                <th><%= tcFir.TecnicaIdTecnica         %></th> 
            <% })%>
        </tbody>
    </table>

    <div class="container">
        <br><hr>
        <div class="col col-12" style="padding-left: 30%;">
            <h2> Consulta de Arquivos FTIR </h2>
        </div>
        <hr>


    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID_Arquivo_FTIR</th>
                <th>Nome do arquivo</th>
                <th>ID_Técnica_FTIR</th>
            </tr>
        </thead>
        <tbody>
            <% tecnicaFtirDiretorio.forEach(tcFtiDir => { %>
            <tr>
                <th><%= tcFtiDir.id_tecnica_ftir_diretorio            %></th>    
                <th><%= tcFtiDir.diretorio_arquivo                    %></th>    
                <th><%= tcFtiDir.TecnicaFTIRIdTecnicaFTIR            %></th>    
            <% })%>
        </tbody>
    </table>

    <br><hr>
</div>